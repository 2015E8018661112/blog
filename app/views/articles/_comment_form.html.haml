.comment_form
  = form_for @comment, url: article_comments_path(@article), role: 'form' do |f|
    .form-group
      %label{for: 'article_content'} 评论内容
      = f.text_area :content, placeholder: '评论内容', class: 'form-control'
    .form-group
      = f.submit '提交', class: 'btn btn-success btn-lg btn-block'