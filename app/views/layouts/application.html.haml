!!!
%html
  %head
    %meta{charset: "utf-8"}
    %meta{"http-equiv"=>"X-UA-Compatible", "content"=>"IE=edge"}
    %meta{"name"=>"viewport", "content"=>"width=device-width, initial-scale=1"}
    %title= Settings.blog.title
    = stylesheet_link_tag 'application', media: 'all'
    = javascript_include_tag 'application'
    = javascript_include_tag 'http://cdn.bootcss.com/html5shiv/3.7.2/html5shiv.min.js'
    = javascript_include_tag 'http://cdn.bootcss.com/respond.js/1.4.2/respond.min.js'
    = csrf_meta_tags

  %body
    .container.wrap_body
      %nav.navbar.navbar-default{role:'navigation'}
        .container-fluid
          .navbar-header
            = link_to 'Blog首页', root_path, class: 'navbar-brand'
          .collspse.navbar-collapse.site-header
            %ul.nav.navbar-nav
              %li.active
                = link_to '文章列表', '#'
              %li
                = link_to '分类浏览', '#'
            %ul.nav.navbar-nav.navbar-right
              - if is_logined?
                %li.dropdown
                  .navbar-header.navbar-avatar
                    = avatar @current_user
                  = link_to '#', class: 'dropdown-toggle pull-right', "data-toggle"=>"dropdown" do
                    = @current_user.username
                    %span.caret
                  %ul.dropdown-menu{role: 'menu'}
                    %li
                      = link_to '#' do
                        = gravatar_image_tag @current_user.email, size: 100, alt: @current_user.username, gravatar: {default: 'http://www.gravatar.com/avatar/0c821f675f132d790b3f25e79da739a7'}
                    %li
                      = link_to '退出', logout_path
              - else
                %ul.navbar-button.navbar-right
                  %li
                    = link_to '登录', login_path, class: 'btn btn-default'
                  %li
                    = link_to '注册', register_path, class: 'btn btn-primary'
            = form_tag "#", class: 'navbar-form pull-right', role: 'search' do
              .form-group
                = text_field_tag 'keyword', params[:keyword], class: 'form-control', placeholder: '请输入关键字'
                = submit_tag '提交', class: 'btn btn-default'
      = yield
      .alert.alert-warning
        %a.close{"data-dismiss"=>"alert"} &times;
        %span
          fdsafdsafdsfsd
